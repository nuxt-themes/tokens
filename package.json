{
  "name": "@nuxt-themes/tokens",
  "version": "1.5.0",
  "description": "Nuxt official Design Tokens definition.",
  "author": "NuxtLabs <hello@nuxtlabs.com>",
  "license": "MIT",
  "repository": "git@github.com:nuxt-themes/tokens.git",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    },
    "./tokens": "./dist/tokens.config.ts",
    "./config": "./dist/tokens.config.ts"
  },
  "files": [
    "dist",
    "tokens"
  ],
  "scripts": {
    "build": "nuxt-module-build",
    "dev": "nuxi dev website",
    "dev:website": "nuxi dev website",
    "build:website": "nuxi generate website",
    "generate:website": "nuxi generate website",
    "lint": "eslint . --fix",
    "release": "release-it"
  },
  "dependencies": {
    "@nuxtjs/color-mode": "^3.2.0",
    "@vueuse/core": "^9.9.0",
    "pinceau": "^0.10.3"
  },
  "devDependencies": {
    "style-value-types": "^5.1.2",
    "@antfu/eslint-config": "^0.34.0",
    "@nuxt-themes/typography": "^0.2.2",
    "@nuxt/content": "^2.3.0",
    "@nuxt/module-builder": "latest",
    "@vueuse/motion": "2.0.0-beta.25",
    "eslint": "^8.30.0",
    "nuxt": "^3.0.0",
    "nuxt-icon": "^0.1.8",
    "release-it": "^15.6.0",
    "typescript": "^4.9.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vue",
        "postcss",
        "postcss-*",
        "@nuxt/kit"
      ]
    }
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm build"
      ]
    },
    "npm": {
      "access": "public"
    },
    "git": {
      "commitMessage": "chore(release): release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  },
  "build": {
    "entries": [
      "./src/module.ts"
    ]
  }
}
