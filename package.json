{
  "name": "@nuxt-themes/tokens",
  "version": "2.1.0",
  "description": "Nuxt official Design Tokens definition.",
  "author": "NuxtLabs <hello@nuxtlabs.com>",
  "license": "MIT",
  "repository": "git@github.com:nuxt-themes/tokens.git",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    },
    "./config": "./config.ts"
  },
  "files": [
    "dist",
    "tokens",
    "config.ts"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "nuxi dev website",
    "dev:website": "nuxi dev website",
    "build:website": "nuxi generate website",
    "generate:website": "nuxi generate website",
    "lint": "eslint . --fix",
    "release": "release-it"
  },
  "dependencies": {
    "@nuxtjs/color-mode": "^3.3.0",
    "@vueuse/core": "^10.3.0",
    "pinceau": "^0.20.0"
  },
  "devDependencies": {
    "style-value-types": "^5.1.2",
    "@antfu/eslint-config": "^0.40.2",
    "@nuxt-themes/typography": "^1.0.0",
    "@nuxt/content": "^2.7.2",
    "@nuxt/module-builder": "latest",
    "@vueuse/motion": "2.0.0",
    "eslint": "^8.46.0",
    "nuxt": "^3.6.5",
    "nuxt-icon": "^0.5.0",
    "release-it": "^16.1.3",
    "typescript": "^5.1.6"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vue",
        "postcss",
        "postcss-*",
        "@nuxt/kit"
      ]
    }
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm build"
      ]
    },
    "npm": {
      "access": "public"
    },
    "git": {
      "commitMessage": "chore(release): release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  }
}
